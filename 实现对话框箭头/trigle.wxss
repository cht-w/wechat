.box {
    height: 100vh;
    width: 100%;
    padding: 36rpx;
}
.tips_box {
    position: relative;
    margin-top: 100rpx;
    height: 200rpx;
    width: 500rpx;
    margin: 0 auto;
    border: 2rpx solid #373737;
}
.tips_box::before {
    content:'';
    position: absolute;
    left: 100rpx;
    top: -40rpx;
    border-bottom: 20rpx solid #373737;
    border-top: 20rpx solid transparent;
    border-left: 20rpx solid #373737;
    border-right: 20rpx solid transparent;
}
